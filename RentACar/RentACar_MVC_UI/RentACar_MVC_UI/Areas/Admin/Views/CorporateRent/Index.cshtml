@{
    Layout = "_LayoutAdmin";
}


<style>
    .errorBorder {
        border: 2px solid red;
    }

    .defaultBorder {
        border: 1px solid #ced4da;
    }
</style>

<div class="container" style="margin-top:10px">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary" style="margin:10px;padding:10px;background-color:azure">
