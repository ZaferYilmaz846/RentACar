@{
    Layout = "_LayoutAdmin";
}



<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
<!-- Font Awesome -->
<link rel="stylesheet" href="~/Areas/plugins/fontawesome-free/css/all.min.css">
<!-- Theme style -->
<link rel="stylesheet" href="~/Areas/dist/css/adminlte.min.css">


<style>
    .errorBorder {
        border: 2px solid red;
    }

    .defaultBorder {
        border: 1px solid #ced4da;
    }
</style>


<div class="container" style="margin-top:20px">
    <div class="row">
        <div class="col-12">
            <h1 class="title" style="text-align:center">Lorem Ipsum</h1><br />
            <h4 class="title" style="text-align:center">
                "Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit..."
            </h4>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card card-info" style="margin-top:10px">
                <div class="card-header">
                    <h3 class="card-title">Araç Kiralama</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col">
                                <label>Alış Yeri</label>
                                <select class="custom-select form-control-border">
                                    <option>İstanbul</option>
                                    <option>Ankara</option>
                                    <option>İzmir</option>
                                </select>
                            </div>
                        </div>
                        <div class="row" style="margin-top:10px">
                            <div class="col-sm-6">
                                <!-- text input -->
                                <div class="form-group">
                                    <label>Alış Tarihi</label>
                                    <input type="date" class="form-control empty" errorATTR="Alış Tarihi Boş Olamaz..." placeholder="Alış Tarihini Seçiniz...">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Dönüş Tarihi</label>
                                    <input type="date" class="form-control empty" errorATTR="Dönüş Tarihi Boş Olamaz..." placeholder="Dönüş Tarihini Seçiniz...">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <!-- textarea -->
                                <div class="form-group">
                                    <label>Alış Saati</label>
                                    <input type="time" class="form-control empty" errorATTR="Alış Saati Boş Olamaz...">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Dönüş Saati</label>
                                    <input type="time" class="form-control empty" errorATTR="Dönüş Saati Boş Olamaz...">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="card-footer">
                                    <button id="btnSearchCar" type="button" class="btn btn-info float-right">Araç Ara</button>
                                </div>
                            </div>
                        </div>
                        <div id="errorMessage" style="margin:10px"></div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-7" style="width: 18rem; margin:10px">
            <div class="card-body">
                <img src="~/images/Vehicle-home-page.jpg">
            </div>
        </div>
    </div>
</div>


<script src="/Areas/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="/Areas/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="/Areas/dist/js/adminlte.min.js"></script>

<script>
    $(document).ready(function () {
        $("#btnSearchCar").click(function () {
            var inputs = $(".empty");
            var errorMessages = "<ul>";
            for (var i = 0; i < inputs.length; i++) {
                var input = inputs[i]
                var isFailed = false;

                if ($(input).val() == "") {
                    $(input).addClass("errorBorder");
                    isFailed = true;
                    errorMessages += "<li>" + $(input).attr("errorATTR") + "</li>";
                }

            }

            if(isFailed){
                errorMessages+="</ul>";
                $("#errorMessage").addClass("alert alert-warning");
                $("#errorMessage").html(errorMessages);
            }
            console.log(errorMessages);

            if(isFailed==false){
                window.location.href = "/Admin/SearchCar/Index"
            }
        });

        $(".empty").click(function () {
            $(this).removeClass("errorBorder")
            $(this).addClass("defaultBorder")
        });
    });
</script>


